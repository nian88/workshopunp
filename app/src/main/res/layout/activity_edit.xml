<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sqllite.EditActivity">
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_sqlite_nama"
        android:hint="Masukkan Nama"
        android:maxLines="1"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_sqlite_alamat"
        android:hint="Masukkan Alamat"
        android:inputType="textLongMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_EditSqlite"
        android:text="Simpan Ke Database"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_DeleteSqlite"
        android:text="Hapus dari Database"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>